<div class="row">
  <div class="col-lg-4 col-xs-6">
    <div class="small-box bg-yellow">
      <div class="inner">
        <h3><%= @workers.count %></h3>

        <p>Total Workers</p>
      </div>
      <div class="icon">
        <i class="ion ion-ios-monitor-outline"></i>
      </div>
      <%= link_to workers_path, class: "small-box-footer" do %>See all Workers <i class="fa fa-arrow-circle-right"></i><% end %>
    </div>
  </div>
  <% if current_user.admin %>
    <div class="col-lg-4 col-xs-6">
      <div class="small-box bg-green">
        <div class="inner">
          <h3><%= @offline_workers.count %><sup style="font-size: 20px"></sup></h3>

          <p>Offline Workers</p>
        </div>
        <div class="icon">
          <i class="ion ion-ios-monitor"></i>
        </div>
        <%= link_to "#", class: "small-box-footer" do %>See all Offline Workers <i class="fa fa-arrow-circle-right"></i><% end %>
      </div>
    </div>
  <% end %>
  <div class="col-lg-4 col-xs-6">
    <div class="small-box bg-yellow">
      <div class="inner">
        <h3><%= show_income(current_user.net_income) %> <small class="text-muted">BTC/day</small></h3>

        <p><%= to_euro(show_income(current_user.net_income)) %><span class="text-muted"> EURO/day</span></p>
      </div>
      <div class="icon">
        <i class="ion ion-social-bitcoin"></i>
      </div>
      <%= link_to current_user, class: "small-box-footer" do %>See Profile <i class="fa fa-arrow-circle-right"></i><% end %>
    </div>
  </div>
  <div class="col-lg-6 col-xs-12">
    <div class="box box-success">
      <div class="box-header with-border">
        <h3 class="box-title">Current Balance</h3>
      </div>
      <div class="box-body">
        <h3>
          <div class="icon">
            <i class="ion ion-social-bitcoin font-big"></i> <%= show_income(current_user.net_income) %> BTC /
            <small><%= to_euro(show_income(current_user.net_income)) %> <span class="text-muted">EURO</span></small>
          </div>
        </h3>
        <hr>
        <p>Your Mining and BTC Deposit Address</p>
        <div class="font-bold"><%= current_user.mining_address ? current_user.mining_address : "Not Found" %></div>
      </div>
    </div>
  </div>
  <% if current_user.admin %>
    <div class="col-lg-6 col-xs-12">
      <div class="box box-warning">
        <div class="box-header with-border">
          <h3 class="box-title">Latest Deposits</h3>
        </div>
        <div class="box-body">
          <div class="table-responsive">
            <table class="table no-margin">
              <thead>
              <tr>
                <th>Date</th>
                <th>Worker</th>
                <th>Income</th>
              </tr>
              </thead>
              <tbody>
              <% @latest_deposits.each do |deposit| %>
                <tr>
                  <td><%= deposit.created_at.to_datetime.strftime('%d-%m-%Y') %></td>
                  <td><%= link_to truncate(titleize(deposit.worker.title)), deposit.worker %></td>
                  <td><i class="fa fa-btc"></i> <%= deposit.income %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="col-lg-12 col-xs-12">
    <div class="box box-warning">
      <div class="box-header with-border">
        <h3 class="box-title">Line Chart</h3>
      </div>
      <div class="box-body">
        <div class="chart">
          <%= content_tag :div, id: "deposits_information", data: { latest_deposits: @chart_data.values.collect {|x| x.sum(&:income)}, labels: @chart_data.keys } do %>
          <% end %>
          <canvas id="lineChart" style="height: 249px; width: 468px;" width="468" height="249"></canvas>
        </div>
      </div>
    </div>
  </div>
</div>
