<div class="row">
  <div class="col-lg-4 col-xs-6">
    <div class="small-box bg-yellow">
      <div class="inner">
        <h3><%= @workers.count %></h3>

        <p>Total Workers</p>
      </div>
      <div class="icon">
        <i class="ion ion-ios-monitor-outline"></i>
      </div>
      <%= link_to workers_path, class: "small-box-footer" do %>See all Workers <i class="fa fa-arrow-circle-right"></i><% end %>
    </div>
  </div>
  <% if current_user.admin %>
    <div class="col-lg-4 col-xs-6">
      <div class="small-box bg-green">
        <div class="inner">
          <h3><%= @offline_workers.count %><sup style="font-size: 20px"></sup></h3>

          <p>Offline Workers</p>
        </div>
        <div class="icon">
          <i class="ion ion-ios-monitor"></i>
        </div>
        <%= link_to "#", class: "small-box-footer" do %>See all Offline Workers <i class="fa fa-arrow-circle-right"></i><% end %>
      </div>
    </div>
  <% end %>
  <div class="col-lg-4 col-xs-6">
    <div class="small-box bg-yellow">
      <div class="inner">
        <h3><%= show_income(current_user.net_income) %> <small class="text-muted">USD/day</small></h3>

        <p><%= to_btc(show_income(current_user.net_income)) %><span class="text-muted">BTC/day</span></p>
      </div>
      <div class="icon">
        <i class="ion ion-social-bitcoin"></i>
      </div>
      <%= link_to current_user, class: "small-box-footer" do %>See Profile <i class="fa fa-arrow-circle-right"></i><% end %>
    </div>
  </div>
  <div class="col-lg-6 col-xs-12">
    <div class="box box-success">
      <div class="box-header with-border">
        <h3 class="box-title">Current Balance</h3>
      </div>
      <div class="box-body">
        <h3>
          <div class="icon">
            <i class="ion ion-social-bitcoin font-big"></i> <%= show_income(current_user.net_income) %> USD /
            <small><%= to_btc(show_income(current_user.net_income)) %> <span class="text-muted">BTC</span></small>
          </div>

        </h3>
        <hr>
        <p>Your Mining and BTC Deposit Address</p>
        <div class="font-bold">33LtV5RajGfg5MyxBHGZ27Xjjggeych4GW</div>
      </div>
    </div>
  </div>
  <div class="col-lg-6 col-xs-12">
    <div class="box box-warning">
      <div class="box-header with-border">
        <h3 class="box-title">Latest Transactions</h3>
      </div>
      <div class="box-body">
        <div class="table-responsive">
          <table class="table no-margin">
            <thead>
            <tr>
              <th>Order ID</th>
              <th>Item</th>
              <th>Status</th>
              <th>Popularity</th>
            </tr>
            </thead>
            <tbody>
            <tr>
              <td><a href="pages/examples/invoice.html">OR9842</a></td>
              <td>Call of Duty IV</td>
              <td><span class="label label-success">Shipped</span></td>
              <td>
                <div class="sparkbar" data-color="#00a65a" data-height="20"><canvas width="34" height="20" style="display: inline-block; width: 34px; height: 20px; vertical-align: top;"></canvas></div>
              </td>
            </tr>
            <tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-12 col-xs-12">
    <div class="box box-warning">
      <div class="box-header with-border">
        <h3 class="box-title">Line Chart</h3>
      </div>
      <div class="box-body">
        <div class="chart">
          <canvas id="lineChart" style="height: 249px; width: 468px;" width="468" height="249"></canvas>
        </div>
      </div>
    </div>
  </div>
</div>
