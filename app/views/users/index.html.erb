<div class="box box-success">
  <div class="box-header with-border">
    <h3 class="box-title">Customers</h3>
    <div class="box-tools pull-right">
      <%= link_to "Add New Customer", new_user_path, class: "btn btn-sm btn-success" %>
    </div>
  </div>
  <div class="box-body">
    <div class="table-responsive">
      <table class="table no-margin">
        <thead>
          <tr>
            <th>Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Country</th>
            <th>Company</th>
            <th>Profit Share</th>
            <th>Net Income</th>
            <th>Workers</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <%= no_data_message(@users) %>
          <% @users.each do |user| %>
            <tr>
              <td><%= titleize(user.name) %></td>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td><%= user.country %></td>
              <td><%= titleize(user.company_name) %></td>
              <td><%= user.profit_share %></td>
              <td><%= user.net_income ? user.net_income : 0.0 %></td>
              <td><%= render partial: "users/user_workers_links", locals: { user: user } %></td>
              <td>
                <%= link_to user do %>
                  <i class="fa fa-eye"></i>
                <% end %>
              </td>
              <td>
                <%= link_to edit_user_path(user) do %>
                  <i class="fa fa-edit"></i>
                <% end %>
              </td>
              <td>
                <% unless user.admin %>
                  <%= link_to  user, method: :delete, data: { confirm: "Are you sure?" } do %>
                    <i class="fa fa-trash"></i>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
