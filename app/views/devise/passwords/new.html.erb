<p class="login-box-msg">Send password reset instructions</p>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <% if resource.errors.any? %>
    <% resource.errors.full_messages.each do |message| %>
      <div class="alert alert-danger alert-dismissable">
        <i class="fa fa-ban"></i>
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <b><%= message %></b>
      </div>
    <% end %>
  <% end %>
  <div class="form-group has-feedback">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>
  <div class="row">
    <div class="col-md-8 col-xs-8 center-block">
      <%= f.submit "Send Instructions", class: "btn btn-success btn-block btn-flat" %>
      <%= link_to "Log In", new_user_session_path, class: "btn btn-success btn-block btn-flat" %>
    </div>
  </div>
<% end %>
