<p class="login-box-msg">Sign in to start your session</p>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group has-feedback">
    <%= f.text_field :email, class: 'form-control', autofocus: true %>
    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
  </div>
  <div class="form-group has-feedback">
    <%= f.password_field :password, class: 'form-control', autocomplete: 'off' %>
    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
  </div>
  <div class="form-group pad-center">
    <%= recaptcha_tags %>
  </div>
  <div class="row">
    <div class="col-md-8 col-xs-8 center-block">
      <%= f.submit 'Log in', class: 'btn btn-success btn-block btn-flat' %>
      <%= link_to 'Reset Password', new_user_password_path, class: 'btn btn-success btn-block btn-flat' %>
    </div>
  </div>
<% end %>
