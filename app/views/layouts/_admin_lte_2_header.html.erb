<header class="main-header">

  <%= link_to "#", class: "logo" do %>
    <span class="logo-mini"><b>P</b>AP</span>
    <span class="logo-lg"><b>Philtrick</b> Admin Panel</span>
  <% end %>

  <nav class="navbar navbar-static-top" role="navigation">
    <%= link_to "#", class: "sidebar-toggle", role: "button", data: {toggle: "offcanvas"} do %>
      <span class="sr-only">Toggle navigation</span>
    <% end %>
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <li class="dropdown messages-menu">
          <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
            <i class="fa fa-envelope-o"></i>
            <span class="label label-success">4</span>
          <% end %>
          <ul class="dropdown-menu">
            <li class="header">You have 4 messages</li>
            <li>
              <ul class="menu">
                <%= link_to "#" do %>
                  <div class="pull-left">
                    <%= image_tag "bitcoin-logo.png", class: "img-circle", alt: "User Image" %>
                  </div>
                  <h4>
                    Support Team
                    <small><i class="fa fa-clock-o"></i> 5 mins</small>
                  </h4>
                  <p>Why not buy a new awesome theme?</p>
                <% end %>
              </ul>
            </li>
            <li class="footer"><a href="#">See All Messages</a></li>
          </ul>

        <li class="dropdown notifications-menu">
          <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
            <i class="fa fa-bell-o"></i>
            <span class="label label-warning">10</span>
          <% end %>
          <ul class="dropdown-menu">
            <li class="header">You have 10 notifications</li>
            <li>
              <ul class="menu">
                <%= link_to "#" do %>
                  <i class="fa fa-users text-aqua"></i> 5 new members joined today
                <% end %>
              </ul>
            </li>
            <li class="footer">
              <%= link_to "View all", "#" %>
            </li>
          </ul>
        </li>
        <li class="dropdown tasks-menu">
          <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
            <i class="fa fa-flag-o"></i>
            <span class="label label-danger">9</span>
          <% end %>
          <ul class="dropdown-menu">
            <li class="header">You have 9 tasks</li>
            <li>
              <ul class="menu">
                <%= link_to "#" do %>
                  <h3>
                    Design some buttons
                    <small class="pull-right">20%</small>
                  </h3>
                  <div class="progress xs">
                    <div class="progress-bar progress-bar-aqua" style="width: 20%" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
                      <span class="sr-only">20% Complete</span>
                    </div>
                  </div>
                <% end %>
              </ul>
            </li>
            <li class="footer">
              <%= link_to "View all tasks", "#" %>
            </li>
          </ul>
        </li>
        <li class="dropdown user user-menu">
          <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
            <%= image_tag "bitcoin-logo.png", class: "user-image", alt: "User Image" %>
            <span class="hidden-xs"><%= current_user.name.titleize %></span>
          <% end %>
          <ul class="dropdown-menu">
            <li class="user-header">
              <%= image_tag "bitcoin-logo.png", class: "img-circle", alt: "User Image" %>
              <p>
                <%= current_user.name.titleize %> - <%= current_user.company_name.titleize %>
                <small>Profit Share: <%= current_user.profit_share %></small>
              </p>
            </li>
            <li class="user-footer">
              <div class="pull-left">
                <%= link_to "Profile", user_path(current_user), class: "btn btn-default btn-flat" %>
              </div>
              <div class="pull-right">
                <%= link_to "Sign out", destroy_user_session_path, class: "btn btn-default btn-flat" %>
              </div>
            </li>
          </ul>
        </li>
        <li>
          <%= link_to "#", data: {toggle: "control-sidebar"} do %>
            <i class="fa fa-gears"></i>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>
</header>
