<aside class="main-sidebar">
  <section class="sidebar">
    <div class="user-panel">
      <div class="pull-left image">
        <%= image_tag "bitcoin-logo.png", class: "img-circle", alt: "User Image" %>
      </div>
      <div class="pull-left info">
        <p><%= titleize(current_user.name) %></p>
        <%= link_to "#" do %>
          <i class="fa fa-circle text-success"></i> Online
        <% end %>
      </div>
    </div>
    <ul class="sidebar-menu">
      <li class="header">Site Links</li>
      <li class="<%= sidebar_active_class('dashboard') %>">
        <%= link_to authenticated_root_path do %>
          <i class="fa fa-dashboard"></i> <span>Dashboard</span>
        <% end %>
      </li>
      <% if can? :manage, User %>
        <li class="<%= sidebar_active_class('/users') %>">
          <%= link_to users_path do %>
            <i class="fa fa-user"></i> <span>Customers</span>
          <% end %>
        </li>
      <% end %>
      <li class="<%= sidebar_active_class('/workers') %>">
        <%= link_to workers_path do %>
          <i class="fa fa-desktop"></i> <span>Workers</span>
        <% end %>
      </li>
      <% if can? :manage, Deposit %>
        <li class="<%= sidebar_active_class('/deposits') %>">
          <%= link_to deposits_path do %>
            <i class="fa fa-bitcoin"></i> <span>Deposits</span>
          <% end %>
        </li>
      <% end %>
      <% if can? :manage, Currency %>
        <li class="<%= sidebar_active_class('/currencies') %>">
          <%= link_to currencies_path do %>
            <i class="fa fa-money"></i> <span>Currencies</span>
          <% end %>
        </li>
      <% end %>
      <% if can? :manage, Transaction %>
        <li class="<%= sidebar_active_class('/transactions') %>">
          <%= link_to transactions_path do %>
            <i class="fa fa-sign-out"></i> <span>Withdrawal Requests</span>
          <% end %>
        </li>
      <% elsif can? :index, Transaction %>
        <li class="<%= sidebar_active_class('/transactions') %>">
          <%= link_to transactions_path do %>
            <i class="fa fa-credit-card-alt"></i> <span>Wallet</span>
          <% end %>
        </li>
      <% end %>
    </ul>
  </section>
</aside>
