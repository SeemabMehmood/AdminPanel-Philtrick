<%= form_tag worker_add_customers_path, method: :post do |form| %>
  <div class="box box-success">
    <div class="box-header with-border">
      <h3 class="box-title"><%= truncate titleize(@worker.title) %></h3>
    </div>
    <div class="box-body">
      <div class="row">
        <div class="col-xs-6">
          <div class="form-group">
            <%= label_tag :user_id, "Customer" %>
            <%= select_tag :user_id, options_for_select(
                  @users.map { |u| [titleize(u.name), u.id] }
                ), include_blank: 'Select Customer', class: "form-control", required: true %>
          </div>
        </div>
        <div class="col-xs-6">
          <div class="form-group">
            <%= label_tag :worker_count, "Workers Count" %><br/>
            <%= number_field_tag :worker_count, "", class: "form-control", required: true %>
          </div>
        </div>
      </div>
    </div>
    <div class="box-footer">
      <%= submit_tag "Add Customer", class: "btn btn-success margin-r-5" %>
      <%= link_to 'Back', worker_path(@worker), class: "btn btn-default" %>
    </div>
  </div>
<% end %>
